@model CPRO2211_Assign3.Models.AccommodationViewModel

@{
    ViewData["Title"] = "Accommodation Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <form asp-action="SubmitAccommodation" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="AccommodationPhone" class="control-label">Phone Number</label>
            <input asp-for="AccommodationPhone" class="form-control" placeholder="Contact number">
            <span asp-validation-for="AccommodationPhone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AccommodationEmail" class="control-label">Email Address</label>
            <input asp-for="AccommodationEmail" type="email" class="form-control" placeholder="Contact email">
            <span asp-validation-for="AccommodationEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Next</button>
        </div>
    </form>
    <div>
        <a asp-action="Create" class="btn btn-secondary">Back</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}