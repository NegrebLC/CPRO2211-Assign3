@model CPRO2211_Assign3.Models.ActivityViewModel

@{
    ViewData["Title"] = "Activities Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <form asp-action="SubmitActivities" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ThingToDo1" class="control-label">Activity 1</label>
            <input asp-for="ThingToDo1" class="form-control" placeholder="Enter first activity">
            <span asp-validation-for="ThingToDo1" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ThingToDo2" class="control-label">Activity 2</label>
            <input asp-for="ThingToDo2" class="form-control" placeholder="Enter second activity">
            <span asp-validation-for="ThingToDo2" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ThingToDo3" class="control-label">Activity 3</label>
            <input asp-for="ThingToDo3" class="form-control" placeholder="Enter third activity">
            <span asp-validation-for="ThingToDo3" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">Save Trip</button>
            <a asp-action="CreateAccommodation" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}