@model CPRO2211_Assign3.Models.Trip

@{
    ViewData["Title"] = "Delete Trip";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <h3>Are you sure you want to delete this trip?</h3>
    <div>
        <h4>Trip Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Destination)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Destination)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate, "{0:d}")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndDate, "{0:d}")
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="TripId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}